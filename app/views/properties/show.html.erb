<div class="max-w-5xl mx-auto">
  <%= link_to properties_path, class: "inline-flex items-center text-ios-blue hover:text-blue-700 mb-6" do %>
    ← Back to properties
  <% end %>

  <div class="bg-white rounded-ios-xl overflow-hidden shadow-ios-md">
    <% if @property.main_image %>
      <div class="h-96 bg-ios-gray-1">
        <img src="<%= @property.main_image %>" alt="<%= @property.title %>" class="w-full h-full object-cover">
      </div>
    <% end %>

    <div class="p-4 sm:p-6 md:p-8">
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6 gap-4">
        <div class="flex-1">
          <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-2"><%= @property.title %></h1>
        </div>

        <div class="sm:text-right">
          <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-ios-blue"><%= @property.formatted_price %></div>
          <% if @property.operation_types.present? %>
            <div class="mt-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-ios-gray-1 rounded-ios text-xs sm:text-sm font-medium text-gray-700 inline-block">
              <%= @property.operation_types %>
            </div>
          <% end %>
        </div>
      </div>

      <% if @property.bedrooms || @property.bathrooms || @property.parking_spaces %>
        <div class="grid grid-cols-3 gap-2 sm:gap-4 mb-8 p-4 sm:p-6 bg-ios-gray-1 rounded-ios-lg">
          <% if @property.bedrooms %>
            <div class="text-center">
              <div class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @property.bedrooms %></div>
              <div class="text-xs sm:text-sm text-gray-600">Bedrooms</div>
            </div>
          <% end %>

          <% if @property.bathrooms %>
            <div class="text-center border-l border-gray-300">
              <div class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @property.bathrooms %></div>
              <div class="text-xs sm:text-sm text-gray-600">Bathrooms</div>
            </div>
          <% end %>

          <% if @property.parking_spaces %>
            <div class="text-center border-l border-gray-300">
              <div class="text-2xl sm:text-3xl font-bold text-gray-900"><%= @property.parking_spaces %></div>
              <div class="text-xs sm:text-sm text-gray-600">Parking</div>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @property.description.present? %>
        <div class="mb-8">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4">Description</h2>
          <p class="text-sm sm:text-base text-gray-700 leading-relaxed"><%= simple_format(@property.description) %></p>
        </div>
      <% end %>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 p-4 sm:p-6 bg-gray-50 rounded-ios-lg">
        <% if @property.property_type %>
          <div>
            <div class="text-sm text-gray-500">Property Type</div>
            <div class="font-medium text-gray-900"><%= @property.property_type %></div>
          </div>
        <% end %>

        <% if @property.public_id %>
          <div>
            <div class="text-sm text-gray-500">Property ID</div>
            <div class="font-medium text-gray-900"><%= @property.public_id %></div>
          </div>
        <% end %>

        <% if @property.construction_size %>
          <div>
            <div class="text-sm text-gray-500">Construction Size</div>
            <div class="font-medium text-gray-900"><%= number_with_delimiter(@property.construction_size) %> m²</div>
          </div>
        <% end %>

        <% if @property.lot_size %>
          <div>
            <div class="text-sm text-gray-500">Lot Size</div>
            <div class="font-medium text-gray-900"><%= number_with_delimiter(@property.lot_size) %> m²</div>
          </div>
        <% end %>
      </div>

      <% if @property.location && @property.location['latitude'] && @property.location['longitude'] %>
        <div class="mt-8">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4">Location</h2>
          <div class="bg-white rounded-ios-lg overflow-hidden shadow-ios-sm">
            <div
              data-controller="map"
              data-map-latitude-value="<%= @property.location['latitude'] %>"
              data-map-longitude-value="<%= @property.location['longitude'] %>"
              data-map-name-value="<%= @property.location['name'] || @property.title %>"
              class="w-full h-64 sm:h-80 md:h-96"
            ></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

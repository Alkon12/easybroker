<div class="max-w-5xl mx-auto">
  <%= link_to properties_path, class: "inline-flex items-center text-ios-blue hover:text-blue-700 mb-6" do %>
    ← Back to properties
  <% end %>

  <div class="bg-white rounded-ios-xl overflow-hidden shadow-ios-md">
    <% if @property.main_image %>
      <div class="h-96 bg-ios-gray-1">
        <img src="<%= @property.main_image %>" alt="<%= @property.title %>" class="w-full h-full object-cover">
      </div>
    <% end %>

    <div class="p-8">
      <div class="flex items-start justify-between mb-6">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @property.title %></h1>
          <% if @property.full_location.present? %>
            <p class="text-lg text-gray-500 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <%= @property.full_location %>
            </p>
          <% end %>
        </div>

        <div class="text-right">
          <div class="text-4xl font-bold text-ios-blue"><%= @property.formatted_price %></div>
          <% if @property.operation_types.present? %>
            <div class="mt-2 px-4 py-2 bg-ios-gray-1 rounded-ios text-sm font-medium text-gray-700">
              <%= @property.operation_types %>
            </div>
          <% end %>
        </div>
      </div>

      <% if @property.bedrooms || @property.bathrooms || @property.parking_spaces %>
        <div class="grid grid-cols-3 gap-4 mb-8 p-6 bg-ios-gray-1 rounded-ios-lg">
          <% if @property.bedrooms %>
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900"><%= @property.bedrooms %></div>
              <div class="text-sm text-gray-600">Bedrooms</div>
            </div>
          <% end %>

          <% if @property.bathrooms %>
            <div class="text-center border-l border-gray-300">
              <div class="text-3xl font-bold text-gray-900"><%= @property.bathrooms %></div>
              <div class="text-sm text-gray-600">Bathrooms</div>
            </div>
          <% end %>

          <% if @property.parking_spaces %>
            <div class="text-center border-l border-gray-300">
              <div class="text-3xl font-bold text-gray-900"><%= @property.parking_spaces %></div>
              <div class="text-sm text-gray-600">Parking</div>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @property.description.present? %>
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
          <p class="text-gray-700 leading-relaxed"><%= simple_format(@property.description) %></p>
        </div>
      <% end %>

      <div class="grid grid-cols-2 gap-4 p-6 bg-gray-50 rounded-ios-lg">
        <% if @property.property_type %>
          <div>
            <div class="text-sm text-gray-500">Property Type</div>
            <div class="font-medium text-gray-900"><%= @property.property_type %></div>
          </div>
        <% end %>

        <% if @property.public_id %>
          <div>
            <div class="text-sm text-gray-500">Property ID</div>
            <div class="font-medium text-gray-900"><%= @property.public_id %></div>
          </div>
        <% end %>

        <% if @property.construction_size %>
          <div>
            <div class="text-sm text-gray-500">Construction Size</div>
            <div class="font-medium text-gray-900"><%= number_with_delimiter(@property.construction_size) %> m²</div>
          </div>
        <% end %>

        <% if @property.lot_size %>
          <div>
            <div class="text-sm text-gray-500">Lot Size</div>
            <div class="font-medium text-gray-900"><%= number_with_delimiter(@property.lot_size) %> m²</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

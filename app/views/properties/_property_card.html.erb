<%= link_to property_path(property.public_id || property.id), class: "block card group" do %>
  <div class="relative h-48 bg-ios-gray-1 rounded-t-ios-lg overflow-hidden">
    <% if property.thumbnail_image %>
      <img src="<%= property.thumbnail_image %>" alt="<%= property.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <svg class="w-12 h-12 text-ios-gray-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
    <% end %>

    <% if property.for_sale? || property.for_rent? %>
      <div class="absolute top-3 left-3">
        <span class="px-3 py-1 bg-white/95 backdrop-blur-sm rounded-ios text-xs font-semibold text-ios-blue">
          <%= property.operation_types %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="p-4">
    <h3 class="font-semibold text-gray-900 text-lg mb-1 line-clamp-2 group-hover:text-ios-blue transition-colors">
      <%= property.title %>
    </h3>

    <% if property.full_location.present? %>
      <p class="text-sm text-gray-500 mb-3 flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <%= property.full_location %>
      </p>
    <% end %>

    <% if property.summary.present? %>
      <p class="text-sm text-gray-600 mb-3"><%= property.summary %></p>
    <% end %>

    <div class="flex items-center justify-between pt-3 border-t border-gray-100">
      <span class="text-2xl font-bold text-gray-900"><%= property.formatted_price %></span>
      <span class="text-sm text-ios-blue group-hover:translate-x-1 transition-transform">
        View details â†’
      </span>
    </div>
  </div>
<% end %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Locations</h1>
      <p class="mt-1 text-gray-500">Browse EasyBroker locations</p>
    </div>
  </div>

  <% if @locations.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @locations.each do |location| %>
        <div class="card p-5">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="font-semibold text-gray-900 text-lg"><%= location.name %></h3>
              <p class="text-sm text-gray-500 mt-1"><%= location.full_name %></p>
              <span class="inline-block mt-2 px-3 py-1 bg-ios-gray-1 rounded-ios text-xs font-medium text-gray-700">
                <%= location.type_label %>
              </span>
            </div>
          </div>

          <% if location.has_localities? %>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <p class="text-sm text-gray-600">
                Contains <%= location.localities_count %>
                <%= 'locality'.pluralize(location.localities_count) %>
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @pagination && @pagination.total_pages > 1 %>
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <div class="text-sm text-gray-600">
          Page <%= @pagination.page %> of <%= @pagination.total_pages %>
        </div>

        <div class="flex items-center space-x-2">
          <% unless @pagination.first_page? %>
            <%= link_to "← Previous", locations_path(page: @pagination.page - 1, search: @search), class: "btn btn-secondary" %>
          <% end %>

          <% if @pagination.next_page? %>
            <%= link_to "Next →", locations_path(page: @pagination.next_page, search: @search), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-16">
      <div class="w-16 h-16 bg-ios-gray-1 rounded-full mx-auto mb-4 flex items-center justify-center">
        <svg class="w-8 h-8 text-ios-gray-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-1">No locations found</h3>
      <p class="text-gray-500">Try adjusting your search</p>
    </div>
  <% end %>
</div>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Locations</h1>
      <p class="mt-1 text-gray-500">Browse EasyBroker locations and properties on map</p>
    </div>
  </div>

  <!-- Property Map Section -->
  <div class="bg-white rounded-ios-xl shadow-ios-md overflow-hidden">
    <div class="p-6 border-b border-gray-100">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-gray-900">Property Map</h2>
        <div data-properties-map-target="counter" class="text-sm text-gray-600">
          Loading properties...
        </div>
      </div>
    </div>

    <div
      data-controller="properties-map"
      data-properties-map-api-url-value="<%= map_properties_locations_path(format: :json) %>"
      class="relative"
    >
      <!-- Loading State -->
      <div
        data-properties-map-target="loading"
        class="absolute inset-0 z-10 flex items-center justify-center bg-white bg-opacity-90"
      >
        <div class="text-center">
          <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-ios-blue mb-4"></div>
          <p class="text-gray-600 font-medium">Loading property locations...</p>
          <p class="text-sm text-gray-500 mt-1">This may take a few seconds</p>
        </div>
      </div>

      <!-- Error State -->
      <div
        data-properties-map-target="error"
        class="hidden absolute inset-0 z-10 flex items-center justify-center bg-red-50"
      >
        <div class="text-center p-6">
          <svg class="w-16 h-16 text-red-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-red-600 font-medium"></p>
        </div>
      </div>

      <!-- Map Container -->
      <div
        data-properties-map-target="container"
        class="w-full h-96 md:h-[600px]"
      ></div>
    </div>
  </div>

  <!-- Locations Grid -->
  <% if @locations.any? %>
    <div class="mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">All Locations</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @locations.each do |location| %>
        <div class="card p-5">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="font-semibold text-gray-900 text-lg"><%= location.name %></h3>
              <p class="text-sm text-gray-500 mt-1"><%= location.full_name %></p>
              <span class="inline-block mt-2 px-3 py-1 bg-ios-gray-1 rounded-ios text-xs font-medium text-gray-700">
                <%= location.type_label %>
              </span>
            </div>
          </div>

          <% if location.has_localities? %>
            <div class="mt-4 pt-4 border-t border-gray-100">
              <p class="text-sm text-gray-600">
                Contains <%= location.localities_count %>
                <%= 'locality'.pluralize(location.localities_count) %>
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @pagination && @pagination.total_pages > 1 %>
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <div class="text-sm text-gray-600">
          Page <%= @pagination.page %> of <%= @pagination.total_pages %>
        </div>

        <div class="flex items-center space-x-2">
          <% unless @pagination.first_page? %>
            <%= link_to "← Previous", locations_path(page: @pagination.page - 1, search: @search), class: "btn btn-secondary" %>
          <% end %>

          <% if @pagination.next_page? %>
            <%= link_to "Next →", locations_path(page: @pagination.next_page, search: @search), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
